---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const pageTitle =
  "Marco Vellinga - Software engineer with an above average interest in information security";
const pageDescription =
  "My name is Marco Vellinga, currently giving cancer patients a fighting chance at deephealth. Experienced in Python and Django with a touch of Svelte(kit). Always on the lookout to learn new things, build cool stuff and lock software down.";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <title>
      {pageTitle}
    </title>
    <meta name="description" content={pageDescription} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body class="flex h-full bg-black">
    <div class="flex w-full">
      <div class="fixed inset-0 flex justify-center sm:px-8">
        <div class="flex w-full max-w-7xl lg:px-8">
          <div class="w-full ring-4 bg-zinc-900 ring-white"></div>
        </div>
      </div>
      <div class="relative flex w-full flex-col">
        <Header />
        <main class="flex-auto">
          <div class="sm:px-8 mt-9">
            <div class="mx-auto w-full max-w-7xl lg:px-8">
              <div class="relative px-4 sm:px-8 lg:px-12">
                <div class="mx-auto max-w-2xl lg:max-w-5xl">
                  <slot />
                </div>
              </div>
            </div>
          </div>
        </main>
        <Footer />
      </div>
    </div>
  </body>
</html>
