---
const { category } = Astro.props;
---

<section
  aria-labelledby=":S1:"
  class="md:border-l md:pl-6 md:border-zinc-700/40"
>
  <div class="grid max-w-3xl grid-cols-1 items-baseline gap-y-8 md:grid-cols-4">
    <h2 id=":S1:" class="text-sm font-semibold text-zinc-100">{category}</h2>
    <div class="md:col-span-3">
      <ul role="list" class="space-y-16">
        <slot />
      </ul>
    </div>
  </div>
</section>
